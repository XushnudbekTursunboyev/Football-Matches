<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="8dp"
    android:id="@+id/linear"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="12dp"
        android:paddingHorizontal="16dp"
        android:id="@+id/constraint"
        android:background="@drawable/linear_back"
        android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_count"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_first_team_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_first_team_name"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_first_team_name"
        app:layout_constraintStart_toEndOf="@id/tv_count" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="RealMadrid"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/im_first_team_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/tv_first_team_lost"
        app:layout_constraintBottom_toBottomOf="@id/im_first_team_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/tv_first_team_ga"
        app:layout_constraintBottom_toBottomOf="@id/im_first_team_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_ga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/im_first_team_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_first_team_gd"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/im_first_team_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_first_team_pts"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_first_team_pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/im_first_team_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>